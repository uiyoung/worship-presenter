<div class="d-flex justify-content-end mb-3">
  <button type="button" class="btn btn-primary btn-sm" 
      {% if user %} 
        id="new-lyrics-button" 
      {% else %}
        onclick="location.href='/auth/login'" 
      {% endif %}>
    <i class="fa-regular fa-circle-xmark fa-rotate-by" style="--fa-rotate-angle: 45deg;"></i> 등록하기
  </button>
</div>

<div class=" input-group my-3">
  <div class="col-auto">
    <select class="form-select" id="search-type-select">
      <option value="title" selected="selected">제목</option>
      <option value="lyrics">가사</option>
    </select>
  </div>
  <input type="search" class="form-control" id="search-input" />
  <button class="btn btn-outline-primary" type="button" id="search-btn">검색</button>
</div>

<div class="d-flex align-items-center justify-content-center mb-1" id="search-info" hidden></div>

{# lyrics table #}
<div class="table-responsive text-nowrap">
  <table class="table table-hover" id="lyrics-table">
    <thead class="table-light">
      <tr class="text-center">
        <th style="width: 5%">#</th>
        <th style="width: 5%">타입</th>
        <th>제목</th>
        <th style="width: 5%">선택</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</div>

<nav aria-label="Page navigation">
  <ul class="pagination pagination-sm justify-content-center mb-0" id="search-pagination"></ul>
</nav>